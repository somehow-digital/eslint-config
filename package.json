{
	"name": "@somehow-digital/eslint-config",
	"description": "Shared `eslint` configurations for `somehow.digital` projects.",
	"version": "1.1.0",
	"type": "module",
	"license": "MIT",
	"repository": "somehow-digital/eslint-config",
	"packageManager": "pnpm@8.15.6",
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"scripts": {
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"exports": {
		".": "./configuration/basic.cjs",
		"./basic": "./configuration/basic.cjs",
		"./typescript": "./configuration/typescript.cjs"
	},
	"files": [
		"./configuration/"
	],
	"peerDependencies": {
		"eslint": "^8.57.0",
		"prettier": "^3.2.0",
		"typescript": "^5.4.0"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-unicorn": "^44.0.2"
	},
	"devDependencies": {
		"@somehow-digital/prettier-config": "^2.0.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "3.2.5"
	}
}
